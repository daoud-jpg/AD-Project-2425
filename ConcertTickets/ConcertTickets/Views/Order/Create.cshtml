@model OrderFormViewModel

<p>Type @Model.TicketType</p>
<p>Prijs @Model.TicketPrice</p>
@if (Model.HasMemberCard == true)
    {
        <p>yes</p>
    }
<p>Aantal @Model.NumTickets</p>

<form method="post" class="row g-3 w-75" asp-controller="Order" asp-action="Create">
    <div class="col-4">
        <label asp-for="@Model.NumberOfSelectedTickets" class="form-label">Number</label>
        <input asp-for="@Model.NumberOfSelectedTickets" class="form-control" value="" />
        <span asp-validation-for="@Model.NumberOfSelectedTickets" class="text-danger"></span>
    </div>
    <p></p>
    <div class="mb-3">
        <div>
            <input type="checkbox" asp-for="@Model.TermsAndConditions">
            <label class="mb-3">
                Ik ga akkoord met de algemene voorwaarden
            </label>
            <br />
            <span asp-validation-for="@Model.TermsAndConditions" class="text-danger"></span>
        </div>
    </div>
    <span><input asp-for="@Model.TicketOfferId" value="@Model.TicketOfferId" hidden/></span>
    <button type="submit" value="Create" class="btn btn-primary">Bestellen</button>
</form>