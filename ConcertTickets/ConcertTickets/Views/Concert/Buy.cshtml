@model ConcertViewModel

<h2>Koop tickets voor @Model.Artist</h2>

<div class="d-flex justify-content-between">
        <div class="card p-2" style="width:635px;">
            <div class="text-center h-100" style="width: 18rem;">
                <img src="/img/@{@Model.ArtistPicture.Replace(" ", string.Empty)}.png" class="card-img-top border-bottom-1 opacity-0">
                <div class="p-2 d-block align-items-start">
                    <div class="date-box bg-danger m-1" style="width: 81px;">
                        <div class="text-uppercase text-white fs-6">@Model.Date.DayOfWeek.ToString().Substring(0, 2)</div>
                        <div class="day text-white fs-6 fw-bold d-block align-items-start">@Model.Date.Day</div>
                        <div class="month text-white">@Model.MonthOfYear. @Model.Date.Year</div>
                    </div>
                    <div class="d-block align-items-start">
                        <p class="m-0 fw-bold d-flex align-items-start">@Model.Artist</p>
                        <p><small class="d-flex align-content-start">@Model.Location</small></p>
                    </div>
                </div>
            </div>
        </div>
    <ol class="list-group list-group-numbered" style="width: 650px;">
        @foreach (var item in Model.TicketOffers)
        {
            <li class="list-group-item d-flex justify-content-between align-items-start">
                <div class="ms-0">
                    <p class="mb-0 fw-bold">@item.TicketType</p>
                    <p class="mb-0">Ticketprijs: €@Math.Round(item.Price, 2) euro</p>
                </div>
                <div class="mx-auto">
                    <p class="badge bg-primary rounded-pill">@item.NumTickets beschikbaar</p>
                </div>
                <div class="me-0">
                    <a asp-controller="Order" asp-action="Create" asp-route-id="@item.Id" class="btn btn-outline-primary mb-0">Koop ticket</a>
                </div>
            </li>
        }
    </ol> 
</div>
<a asp-controller="Concert" asp-action="Index">Terug naar overzicht</a>

